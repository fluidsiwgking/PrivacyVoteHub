{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "types": ["node"],
    "outDir": "dist",
    "sourceMap": true
  },
  "include": [
    "./hardhat.config.ts",
    "./deploy/**/*.ts",
    "./scripts/**/*.ts",
    "./tasks/**/*.ts",
    "./types/**/*.ts"
  ]
}




